  },
  "devDependencies": {
    "@babel/core": "^7.23.7",
    "@babel/preset-env": "^7.23.8",
    "@babel/preset-typescript": "^7.23.3",
    "@microsoft/api-documenter": "^7.23.17",
    "@microsoft/api-extractor": "^7.39.1",
    "@types/eslint": "^8.0.0",
    "@typescript-eslint/eslint-plugin": "latest",
    "@typescript-eslint/parser": "latest",
    "concurrently": "^8.2.2",
    "eslint": "^8.0.0",
    "jest": "^29.7.0",
    "typescript": "~5.3.0"
  }
}
