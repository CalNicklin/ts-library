{
  "name": "chat-stdlib",
  "packageManager": "yarn@3.6.4",
  "main": "dist/index.js",
  "types": "dist/chat-stdlib.d.ts",
  "license": "NO LICENSE",
  "private": true,
  "scripts": {
    "build": "yarn tsc",
